generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  name             String
  email            String   @unique
  password         String
  confirm_password String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  Task    Task[]
  Comment Comment[]

  @@map("users")
}

model Task {
  id          String   @id @default(cuid())
  title       String   @unique
  description String
  difficulty  Int
  status      Boolean  @default(false)
  endsDate    String?
  createdAt   DateTime @default(now())
  authorId    String
  updatedAt   DateTime @updatedAt

  author  User      @relation(fields: [authorId], references: [id])
  Comment Comment[]

  @@map("tasks")
}

model Comment {
  id        String   @id @default(cuid())
  comment   String   @db.Char(120)
  createdAt DateTime @default(now())
  taskId    String
  userId    String

  task Task @relation(fields: [taskId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@map("comments")
}
